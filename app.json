{
  "expo": {
    "name": "Friendly Fediverse",
    "slug": "friendly-fediverse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "friendlyfediverse.com",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6364FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.friendlyfediverse",
      "buildNumber": "2",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Friendly Fediverse to access your photos to upload media",
        "NSCameraUsageDescription": "Allow Friendly Fediverse to use your camera to take photos and videos"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "web": {
      "favicon": "./assets/favicon.png",
      "output": "server",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Friendly Fediverse to access your photos to upload media",
          "cameraPermission": "Allow Friendly Fediverse to use your camera to take photos and videos"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "developmentTeam": "KA5A6NN3PD",
            "bitcode": false,
            "debugInformationFormat": "dwarf-with-dsym",
            "stripDebugSymbolsDuringCopy": false,
            "useFrameworks": "static"  // keep if you already need frameworks; otherwise omit
          }
        }
      ],
      "expo-video"
    ],
    "experiments": {
      "baseUrl": "/friendlyfediverse.com",
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "80ed5dee-ca5b-4513-8e26-b42a5dc50f67"
      }
    },
    "android": {
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.friendlyfediverse"
    },
    "owner": "friendlyfediverse"
  }
}
